@page
@model OMC.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductPrice" class="control-label"></label>
                <input asp-for="Product.ProductPrice" class="form-control" />
                <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImgFile" class="control-label"></label>
                <input tpye="file" asp-for="Product.ImgFile" class="form-control" />
                <span asp-validation-for="Product.ImgFile" class="text-danger"></span>
            </div>
            <select class="form-select" asp-for="Product.ProductType" aria-label="Default select example">
                <option selected>Product Type</option>
                <option value="กาแฟ">กาแฟ</option>
                <option value="ชาไทย">ชาไทย</option>
                <option value="ชาเขียว">ชาเขียว</option>
            </select>

            <div class="form-group">
                <label asp-for="Product.Created" class="control-label"></label>
                <input asp-for="Product.Created" class="form-control" />
                <span asp-validation-for="Product.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Modified" class="control-label"></label>
                <input asp-for="Product.Modified" class="form-control" />
                <span asp-validation-for="Product.Modified" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
