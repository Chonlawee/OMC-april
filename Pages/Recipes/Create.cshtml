@page
@model OMC.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Recipe.RecipeName" class="control-label"></label>
                <input asp-for="Recipe.RecipeName" class="form-control" />
                <span asp-validation-for="Recipe.RecipeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.ProductID" class="control-label"></label>
                <select asp-for="Recipe.ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Syrup" class="control-label"></label>
                <input asp-for="Recipe.Syrup" class="form-control" />
                <span asp-validation-for="Recipe.Syrup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Milk" class="control-label"></label>
                <input asp-for="Recipe.Milk" class="form-control" />
                <span asp-validation-for="Recipe.Milk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Water" class="control-label"></label>
                <input asp-for="Recipe.Water" class="form-control" />
                <span asp-validation-for="Recipe.Water" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Deleted" class="control-label"></label>
                <input asp-for="Recipe.Deleted" class="form-control" />
                <span asp-validation-for="Recipe.Deleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
